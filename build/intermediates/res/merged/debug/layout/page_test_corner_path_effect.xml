                android:text="Deviation:"/>

            <SeekBar
                android:id="@+id/seekbar_discrete_path_effect_deviation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:max="99"/>
        </LinearLayout>

        <com.zlsam.learngraphics.patheffect.DiscretePathEffectView
            android:id="@+id/discrete_path_effect_view"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

